@model IEnumerable<OnlineShop.Models.ProductTypes>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i> New Product Type</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(expression: p => p.ProductType)</th>
            <th></th>
            <th></th>
        </tr>
       @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(i => item.ProductType)</td>
                <td>
                    <partial name="_buttonPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var message = '@TempData["Create"]';
            if (message != null) {
                alertify.success(message);
            }
            var Edit = '@TempData["Update"]';
            if (Edit != null) {
                alertify.success(Edit);
            }
            var Delete = '@TempData["Delete"]';
            if (Delete != null) {
                alertify.success(Delete);
            }
        })
    </script>
}
