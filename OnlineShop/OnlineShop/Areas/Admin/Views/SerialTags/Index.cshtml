@model IEnumerable<OnlineShop.Models.SerialTags>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Serial Tags List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i> New Serial Tags</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(expression: p => p.SerialTag)</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(i => item.SerialTag)</td>
                <td></td>
                <td style="width:150px">
                    <div class="btn-group">
                        <a asp-action="Edit" asp-controller="SerialTags" class="btn btn-primary" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                        <a asp-action="Details" asp-controller="SerialTags" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-list"></i></a>
                        <a asp-action="Delete" asp-controller="SerialTags" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </td>

            </tr>
        }
    </table>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var message = '@TempData["Create"]';
            if (message != null) {
                alertify.success(message);
            }
        })
    </script>
}

